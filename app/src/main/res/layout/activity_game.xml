<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:padding="10dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/colorBackground"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.progression.ethos.digitsgame.GameActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SCORE : 300"
        android:id="@+id/ScoreLabel"
        android:textColor="@color/colorText"
        android:textSize="32dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"/>
    
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pixelspace">

        <ImageView
            android:id="@+id/andy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/andy"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/d0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/d0"
            />
        <ImageView
            android:id="@+id/d1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/d1"
            />

            />


            />

        <ImageView
            android:id="@+id/dd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dd"
            />

        <ImageView
            android:id="@+id/gd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dg"
            />
        <ImageView
            android:id="@+id/pixelspace"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pixelspace"
            />

        <TextView
            android:id="@+id/StartLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on Screen To Start"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:textColor="@color/colorBackground" />



        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:id="@+id/progressBar"
            android:progress="1"
            android:progressDrawable="@drawable/pixelspace"
            android:layout_weight="1" />


    </FrameLayout>


</RelativeLayout>
